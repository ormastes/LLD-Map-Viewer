{
  "name": "lld-map-viewer",
  "displayName": "LLD Map Viewer",
  "description": "Visual Studio Code extension to display Clang LLD map files in a tree table view.",
  "version": "0.0.1",
  "publisher": "Yoon, Jonghyun",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onCustomEditor:lldMapViewer.customEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "lldMapViewer.customEditor",
        "displayName": "LLD Map Viewer",
        "selector": [
          {
            "filenamePattern": "*.map"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "lldMapViewer.openWithMapView",
        "title": "Open with LLD Map Viewer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
